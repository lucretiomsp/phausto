"
Reese bass synthesiser with ADSR envelope. 
"
Class {
	#name : 'TpReese',
	#superclass : 'TpSynth',
	#instVars : [
		'detune',
		'adsr',
		'osci1',
		'osci2'
	],
	#category : 'Phausto-TurboPhausto',
	#package : 'Phausto',
	#tag : 'TurboPhausto'
}

{ #category : 'converting' }
TpReese >> asBox [

adsr := (ADSREnv new
		         label: 'reese';
		         attack: self attack;
		         decay: self decay;
		         sustain: self sustain;
		         release: self release;
		         trigger: self trigger) asBox.
	^ osci1 + osci2 * adsr
]

{ #category : 'initialization' }
TpReese >> initialize [

	| noteSlider |
	super initialize.
	label := 'Reese'.
	self pitch: #ReeseFreq.
	self trigger: #reeseTrigger.
	detune := PhHSlider new label: 'ReeseDetune' values: #( 5 0 30 1 ).
	noteSlider := PhHSlider new
		              label: 'ReeseFreq'
		              values: #( 48 1 127 1 ).
	
	osci1 := SineOsc new
		         freq: #ReeseFreq;
		         uLevel: 0.3 asBox.
	osci2 := SineOsc new
		         uLevel: 0.3 asBox;
		         freq: self pitch asBox 
			         +
				         (PhHSlider new label: 'ReeseDetune' values: #( 5 0 30 1 )) "+ detune asBox"
]
